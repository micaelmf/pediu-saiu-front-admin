<!doctype html>
<html lang="pt-br">
  <%- include('partials/header') %>

  <body style="display: none">
    <!-- BEGIN: Root Layout -->
    <div class="layout">
      <!-- BEGIN: Sidebar -->
      <nav class="sidebar">
        <%- include('partials/logo') %> <%- include('partials/sidebar-left') %>
        <!-- Sidebar Scroll -->
      </nav>
      <!-- End: Sidebar -->
      <!-- BEGIN: Wrapper Main -->
      <div class="wrapper">
        <header class="navbar">
          <div class="navbar__left lg:hidden">
            <a href="javascript:;" class="navbar__icon-link" data-drawer-toggle>
              <i data-icon="heroiconsOutline__menuAlt1"></i>
            </a>
          </div>
          <!-- <div class="navbar__left bottombar bookmark" id="bookmark"></div> -->
          <div class="navbar__center"></div>
          <div class="navbar__right">
            <%- include('partials/message-notifications-menu') %>
            <!-- Messages Dropdown Wrapper -->
            <%- include('partials/notifications-menu') %>
            <!-- Notifications Dropdown Wrapper -->
            <%- include('partials/account-menu') %>
            <!-- Account Menu -->
          </div>
        </header>
        <main class="main">
          <section id="contentscroll" aria-labelledby="contentscroll-tab" class="page main__full flex flex-col">
            <header class="page__header">
              <div class="flex flex-col"><%- include('partials/breadcrumb') %></div>
            </header>
            <div class="page__body">
              <div class="w-full max-w-4xl">
                <form class="card">
                  <div class="card__header">
                    <div>
                      <h3 class="text-xl"><%= title %></h3>
                    </div>
                  </div>
                  <div class="card__body">
                    <fieldset class="field">
                      <label for="name" class="field__label">Avatar</label>
                      <label class="form-control">
                        <input type="text" id="avatar" />
                      </label>
                    </fieldset>
                    <fieldset class="field">
                      <label for="name" class="field__label">Nome</label>
                      <label class="form-control">
                        <input type="text" id="name" />
                      </label>
                    </fieldset>
                    <fieldset class="field">
                      <label for="name" class="field__label">E-mail</label>
                      <label class="form-control">
                        <input type="text" id="email" />
                      </label>
                    </fieldset>
                    <fieldset class="field">
                      <label for="name" class="field__label">Usu√°rio</label>
                      <label class="form-control">
                        <input type="text" id="user" />
                      </label>
                    </fieldset>
                    <fieldset class="field">
                      <label for="name" class="field__label">Senha</label>
                      <label class="form-control">
                        <input type="password" id="password" />
                      </label>
                    </fieldset>

                    <div class="card__divider"></div>
                    <div class="card__footer gap-5">
                      <button type="button" class="button button--flat button--soft">Cancelar</button>
                      <button type="button" class="button scheme-primary">Salvar</button>
                    </div>
                  </div>
                </form>
              </div>
            </div>
          </section>
        </main>
        <%- include('partials/footer') %>
      </div>
      <!-- END: Wrapper Main -->
    </div>
    <!--END: Root Layout -->
  </body>
</html>
